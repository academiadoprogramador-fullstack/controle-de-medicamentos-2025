@using ControleDeMedicamentos.ConsoleApp.Model

@model CadastrarRequisicaoSaidaViewModel;

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Cadastro de Requisição de Saída de Medicamento";

    string nomeMedicamento = ViewBag.NomeMedicamento;
}

<link rel="stylesheet" href="~/form.css" />

<form action="/requisicoes-medicamentos/saida/cadastrar" method="post">
    <label for="funcionarioId">Funcionário Requisitante:</label>
    <select name="funcionarioId" id="funcionarioId">
        @foreach (var f in Model.FuncionariosDisponiveis)
        {
            <option value="@f.Id">@f.Nome</option>
        }
    </select>

    <div class="botoes-interacao">
        <a type="button" id="botaoVoltar" href="/medicamentos/visualizar">Voltar</a>
        <button type="submit" id="botaoConfirmar">Confirmar</button>
    </div>
</form>